rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // HELPER FUNCTIONS
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'kamkunjin@gmail.com';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // PUBLIC COLLECTIONS
    // Allow anyone to read products and categories. Only admins can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // USER-SPECIFIC COLLECTIONS
    // Allow users to create orders. Users can only read their own orders.
    // Admins can read all orders.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && request.resource.data.customer.email == request.auth.token.email);
      allow update, delete: if isAdmin() || (request.auth != null && request.resource.data.customer.email == request.auth.token.email);
    }
    
    // ADMIN-ONLY COLLECTIONS
    // Only admins can read or write to the customers collection.
    match /customers/{customerId} {
      allow read, write: if isAdmin();
    }
  }
}
